          </div>
          <div id="unameError" class="error" aria-live="polite" style="display:none"></div>
        </div>

        <!-- password -->
        <div class="field">
          <label for="password">كلمة المرور</label>
          <div style="position:relative">
            <input id="password" name="password" type="password" placeholder="" required>
            <button type="button" class="show-pass" id="togglePass" aria-label="إظهار كلمة المرور"></button>
          </div>
          <div id="passError" class="error" aria-live="polite" style="display:none"></div>
        </div>

        <div class="form-row">
          <label class="remember"><input id="remember" name="remember" type="checkbox"> تذكرني</label>
        </div>

        <div style="margin-top:20px;display:flex;gap:12px;align-items:center; justify-content: center;">
          <button type="submit" class="btn">تسجيل الدخول</button>
        </div>



      </form>

    </div>
  </div>

