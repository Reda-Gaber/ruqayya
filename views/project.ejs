  <!-- ====== عرض الصورة الرئيسية + تفاصيل المشروع ====== -->
<section class="project-header">
  <h1 class="project-title"><%= project.title %></h1>
  <p class="project-description"><%= project.description || '' %></p>
  <p class="project-description">
    <%= new Date(project.createdAt).toLocaleDateString('ar-EG', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        }) %>
  </p>

</section>


  <% if (!project) { %>
    <div class="no-content">
      <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
      <h2 class="text-muted mb-3">عذراً، هذا المشروع غير موجود</h2>
      <p class="text-secondary mb-4">يرجى العودة إلى قائمة المشاريع لاستعراض الخيارات المتاحة.</p>
      <a href="/projects" class="btn btn-primary">العودة للمشاريع</a>
    </div>
  <% } else { %>

    <!-- مراحل التنفيذ -->
    <% if (project.stages && project.stages.length > 0) { %>
      <section class="stages-section">
        <h2 class="section-title">
          <i class="fas fa-tasks me-2 text-primary"></i> مراحل التنفيذ
        </h2>
        <div class="row g-4">
          <% project.stages.forEach((stage, i) => { %>
            <div class="col-md-6 col-lg-4">
              <div class="stage-card h-100 position-relative">
                <div class="stage-number"><%= i + 1 %></div>
                <img src="<%= stage.image %>" class="stage-img" alt="<%= stage.name || `مرحلة ${i + 1}` %>">
                <div class="stage-content">
                  <h5 class="stage-title"><%= stage.name || `مرحلة ${i + 1}` %></h5>
                  <% if (stage.description) { %>
                    <p class="stage-desc mb-0"><%= stage.description %></p>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </section>
    <% } else { %>
      <div class="no-content">
        <i class="fas fa-info-circle fa-3x text-info mb-3"></i>
        <h4 class="text-muted">لا توجد مراحل محددة لهذا المشروع حالياً</h4>
        <p class="text-secondary">سنقوم بتحديث هذا القسم قريباً مع تفاصيل إضافية.</p>
      </div>
    <% } %>

