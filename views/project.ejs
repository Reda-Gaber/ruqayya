<style>
  body { 
    font-family: 'Cairo', sans-serif; 
    background: #f8f9fa; 
    direction: rtl;
    text-align: right;
  }
  .project-header {
    margin-top: 150px;
    background: linear-gradient(rgba(0,0,0,0.65), rgba(0,0,0,0.65)), url('<%= project?.mainImage || "/images/placeholder.jpg" %>');
    background-size: cover;
    background-position: center;
    color: white;
    padding: 130px 0 90px;
    text-align: center;
    position: relative;
    border-radius: 30px;
  }
  .project-title {
    font-size: 3.2rem;
    font-weight: 800;
    margin-bottom: 1rem;
    text-shadow: 3px 3px 8px rgba(0,0,0,0.7);
  }
  .project-description {
    font-size: 1.25rem;
    opacity: 0.95;
    max-width: 900px;
    margin: 0 auto 1rem;
    line-height: 1.7;
  }
  .project-date {
    font-size: 1.1rem;
    opacity: 0.9;
  }

  .stages-section {
    padding: 80px 0;
  }
  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: #2c3e50;
    text-align: center;
    margin-bottom: 3.5rem;
    position: relative;
  }
  .section-title::after {
    content: '';
    width: 100px;
    height: 5px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    display: block;
    margin: 15px auto 0;
    border-radius: 3px;
  }

  .stage-card {
    border-radius: 22px;
    overflow: hidden;
    background: white;
    box-shadow: 0 10px 35px rgba(0,0,0,0.1);
    transition: all 0.4s ease;
    margin-bottom: 2rem;
    border: none;
  }
  .stage-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 25px 50px rgba(102,126,234,0.2);
  }

  .stage-img {
    height: 380px;
    width: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  .stage-card:hover .stage-img {
    transform: scale(1.05);
  }

  .stage-number {
    position: absolute;
    top: 20px;
    left: 20px;
    width: 60px;
    height: 60px;
    background: #fff;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.6rem;
    font-weight: bold;
    box-shadow: 0 8px 20px rgba(102,126,234,0.5);
    z-index: 10;
  }

  .stage-content {
    padding: 1.8rem;
    text-align: center;
  }
  .stage-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 0.8rem;
  }

  .no-content {
    text-align: center;
    padding: 5rem 2rem;
    background: white;
    border-radius: 25px;
    box-shadow: 0 15px 40px rgba(0,0,0,0.08);
    margin: 3rem 0;
  }

  @media (max-width: 992px) {
    .stage-img { height: 300px; }
    .project-title { font-size: 2.5rem; }
  }
  @media (max-width: 768px) {
    .project-header { padding: 100px 0 70px; margin-top: 120px; }
    .stage-img { height: 250px; }
    .stage-number { width: 50px; height: 50px; font-size: 1.3rem; top: 15px; left: 15px; }
  }
  @media (max-width: 576px) {
    .stage-img { height: 200px; }
    .project-title { font-size: 2rem; }
  }
</style>

<div class="container my-5">

  <!-- Header المشروع -->
  <section class="project-header">
    <h1 class="project-title"><%= project.title %></h1>
    <p class="project-description"><%= project.description %></p>
    <p class="project-date">
      <i class="fas fa-calendar-alt me-2"></i>
      <%= new Date(project.createdAt).toLocaleDateString('ar-EG', { year: 'numeric', month: 'long', day: 'numeric' }) %>
    </p>
  </section>

  <% if (!project) { %>
    <div class="no-content">
      <i class="fas fa-exclamation-triangle fa-5x text-primary mb-4"></i>
      <h2 class="text-muted mb-3">عذراً، هذا المشروع غير موجود</h2>
      <a href="/projects" class="btn btn-primary btn-lg px-5">العودة للمشاريع</a>
    </div>
  <% } else { %>

    <!-- مراحل التنفيذ - النسخة المُحدَّثلة والمضمونة 100% -->
    <% if (project.stages && project.stages.length > 0) { %>
      <section class="stages-section">
        <h2 class="section-title">
          مراحل تنفيذ المشروع
        </h2>
        <div class="row g-4 justify-content-center">
          <% project.stages.forEach((stage, index) => { %>
            <div class="col-12 col-md-6 col-lg-4">
              <div class="stage-card position-relative">
                <div class="stage-number"><%= index + 1 %></div>
                <img 
                  src="<%= stage.image %>" 
                  class="stage-img" 
                  alt="<%= stage.name || 'مرحلة ' + (index + 1) %>"
                  loading="lazy">
                <div class="stage-content">
                  <h5 class="stage-title">
                    <%= stage.name || 'مرحلة ' + (index + 1) %>
                  </h5>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </section>
    <% } else { %>
      <div class="no-content">
        <i class="fas fa-info-circle fa-4x text-info mb-4"></i>
        <h4 class="text-muted mb-3">لا توجد مراحل محددة لهذا المشروع حالياً</h4>
        <p class="text-secondary">سنقوم بتحديث هذا القسم قريباً مع تفاصيل إضافية.</p>
      </div>
    <% } %>

    <!-- معرض الصور (اختياري - فعّله لو عايز) -->
    <!--
    <% if (project.images && project.images.length > 1) { %>
      <section class="gallery-section py-5">
        <h2 class="section-title">معرض الصور</h2>
        <div class="row g-4">
          <% project.images.forEach(img => { %>
            <div class="col-6 col-md-4 col-lg-3">
              <img src="<%= img %>" class="gallery-img w-100" alt="صورة من المشروع">
            </div>
          <% }) %>
        </div>
      </section>
    <% } %>
    -->

  <% } %>
</div>
