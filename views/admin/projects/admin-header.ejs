<!-- views/partials/admin-header.ejs -->
<header class="bg-white shadow-sm border-bottom border-primary border-3">
  <div class="container-fluid">
    <div class="row align-items-center py-3 px-4">
      
      <!-- اللوجو والاسم -->
      <div class="col-md-4 text-md-end text-center">
        <a href="/admin/projects" class="text-decoration-none">
          <h4 class="mb-0 text-primary fw-bold">
            <i class="fas fa-hard-hat me-2"></i>
            مؤسسة رقية اليامي للمقاولات
          </h4>
        </a>
      </div>

      <!-- النافبار في الوسط -->
      <div class="col-md-4 text-center d-none d-md-block">
        <nav class="d-inline-flex gap-4">
          <a href="/admin/projects" class="text-dark fw-600 <%= path === '/admin/projects' ? 'text-primary border-bottom border-primary border-3 pb-1' : '' %>">
            <i class="fas fa-th-large"></i> المشاريع
          </a>
          <a href="/admin/projects/new" class="text-dark fw-600 <%= path === '/admin/projects/new' ? 'text-primary border-bottom border-primary border-3 pb-1' : '' %>">
            <i class="fas fa-plus-circle"></i> إضافة مشروع
          </a>
        </nav>
      </div>

      <!-- تسجيل الخروج -->
      <div class="col-md-4 text-md-start text-center mt-3 mt-md-0">
        <div class="d-flex justify-content-md-end justify-content-center align-items-center gap-3">
          <span class="text-muted small">
            <i class="fas fa-user-circle text-primary"></i> <%= user?.username || 'أدمن' %>
          </span>
          <a href="/admin/logout" class="btn btn-outline-danger btn-sm px-4">
            <i class="fas fa-sign-out-alt"></i> تسجيل الخروج
          </a>
        </div>
      </div>
    </div>

    <!-- نافبار موبايل -->
    <div class="d-md-none text-center mt-3 pb-2 border-top pt-3">
      <a href="/admin/projects" class="btn btn-outline-primary btn-sm mx-2 <%= path === '/admin/projects' ? 'btn-primary' : '' %>">المشاريع</a>
      <a href="/admin/projects/new" class="btn btn-outline-success btn-sm mx-2 <%= path === '/admin/projects/new' ? 'btn-success' : '' %>">إضافة مشروع</a>
    </div>
  </div>
</header>