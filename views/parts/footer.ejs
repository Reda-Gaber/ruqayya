<!-- FOOTER -->
<footer class="footer">
    <div class="container">
        <div class="footer-grid">

            <!-- اللوجو + الوصف -->
            <div class="footer-about">
                <a href="/" class="footer-logo">
                    <img src="/images/logo.png" alt="مؤسسة رقية الي اليامي" class="footer-logo-img">
                    <span class="footer-logo-text">مؤسسة رقية اليامي</span>
                </a>
                <p class="footer-desc">
                    نبني المستقبل بخبرة الماضي وتقنيات الحاضر.<br>
                    متخصصون في المقاولات الإنشائية والديكورات الفاخرة بأعلى معايير الجودة السعودية.
                </p>

                <div class="footer-social">
                    <% 
                    const fbLink = (settings && settings.social && settings.social.facebook) ? settings.social.facebook : '#';
                    const igLink = (settings && settings.social && settings.social.instagram) ? settings.social.instagram : '#';
                    const waLink = (settings && settings.social && settings.social.whatsapp) ? 'https://wa.me/' + settings.social.whatsapp.replace(/[^0-9]/g, '') : 'https://wa.me/966503119104';
                    const twLink = (settings && settings.social && settings.social.twitter) ? settings.social.twitter : '#';
                    const tkLink = (settings && settings.social && settings.social.tiktok) ? settings.social.tiktok : '#';
                    %>
                    <a href="<%= fbLink %>" target="_blank" rel="noopener noreferrer" title="فيسبوك">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="<%= igLink %>" target="_blank" rel="noopener noreferrer" title="إنستجرام">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="<%= waLink %>" target="_blank" rel="noopener noreferrer" title="واتساب">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                    <a href="<%= twLink %>" target="_blank" rel="noopener noreferrer" title="تويتر">
                        <i class="fab fa-x-twitter"></i>
                    </a>
                    <a href="<%= tkLink %>" target="_blank" rel="noopener noreferrer" title="تيك توك">
                        <i class="fab fa-tiktok"></i>
                    </a>
                </div>
            </div>

            <!-- روابط سريعة -->
            <div class="footer-links">
                <h5>روابط سريعة</h5>
                <ul>
                    <li><a href="/">الرئيسية</a></li>
                    <li><a href="/about">من نحن</a></li>
                    <li><a href="/construction">مقاولات إنشائية</a></li>
                    <li><a href="/decor">ديكورات داخلية</a></li>
                    <li><a href="/news">الأخبار</a></li>
                    <li><a href="/contact">اتصل بنا</a></li>
                </ul>
            </div>

            <!-- تواصل معنا -->
            <div class="footer-contact">
                <h5>تواصل معنا</h5>
                <ul>
                    <li>
                        <i class="fas fa-phone"></i>
                        <div>
                            <% if (settings && settings.phones && settings.phones.length > 0) { %>
                                <% settings.phones.forEach(function(phone) { %>
                                    <a href="tel:+966<%= phone.replace(/^0/, '') %>"><%= phone %></a><br>
                                <% }); %>
                            <% } else { %>
                                <a href="tel:+966503119104">0503119104</a><br>
                                <a href="tel:+966560864811">0560864811</a>
                            <% } %>
                        </div>
                    </li>
                    <li>
                        <i class="fas fa-envelope"></i>
                        <div>
                            <a href="mailto:<%= (settings && settings.email) ? settings.email : 'info@roqaya-alyami.sa' %>"><%= (settings && settings.email) ? settings.email : 'info@roqaya-alyami.sa' %></a>
                        </div>
                    </li>
                    <li>
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            نجران رجلاء حي فواز<br>
                            المملكة العربية السعودية
                        </div>
                    </li>
                </ul>
            </div>

        </div>

        <div class="footer-bottom">
            <p>© <span id="currentYear"></span> مؤسسة رقية اليامي للمقاولات والديكورات. جميع الحقوق محفوظة.</p>
        </div>
    </div>
</footer>

<!-- زر العودة للأعلى (دلوقتي بيظهر بقوة) -->
<button class="scroll-top" id="scrollTop" aria-label="العودة للأعلى">
    <svg viewBox="0 0 24 24" width="26" height="26" stroke="currentColor" stroke-width="2.5" fill="none">
        <path d="M12 5l-8 8h5v8h6v-8h5z"/>
    </svg>
</button>


<script>
    document.getElementById('currentYear').textContent = new Date().getFullYear();
    
    const scrollTopBtn = document.getElementById('scrollTop');
    
    window.addEventListener('scroll', () => {
        if (window.scrollY > 300) {
            scrollTopBtn.classList.add('show');
        } else {
            scrollTopBtn.classList.remove('show');
        }
    });
    
    scrollTopBtn.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });
</script>

<script src="/js/main.js"></script>
</body>
</html>